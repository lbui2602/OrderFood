<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#419F7D"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uis.DetailsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:background="@drawable/bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp"
        android:orientation="vertical"
        android:layout_gravity="bottom">
        <LinearLayout
            android:layout_marginLeft="@dimen/_70sdp"
            android:layout_marginRight="@dimen/_70sdp"
            android:layout_marginTop="@dimen/_160sdp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_height="@dimen/_35sdp">
            <ImageView
                android:id="@+id/imgCongDetail"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/cong_icon"
                android:layout_width="0dp"
                android:layout_weight="2.1"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tvQuantityDetail"
                android:layout_width="0dp"
                android:text="3"
                android:textColor="#F44336"
                android:textSize="@dimen/_25sdp"
                android:gravity="center"
                android:layout_weight="0.8"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/imgTruDetail"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/tru_icon"
                android:layout_width="0dp"
                android:layout_weight="2.1"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvNameDetail"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="@color/black"
            android:text="Ga nuong khong xuong"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvPriceDetail"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="#F44336"
            android:text="Ga nuong khong xuong"
            android:textSize="@dimen/_20sdp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imgAddToCartDetail"
            android:src="@drawable/addtocart"
            android:layout_marginTop="@dimen/_30sdp"
            android:padding="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@drawable/img_shape"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"/>
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgFoodDetail"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_250sdp"
        android:src="@color/background" />
</FrameLayout>