<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/llFoodItemGetAll"
    android:layout_height="@dimen/_110sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/_4sdp"
    android:layout_marginRight="@dimen/_4sdp">

    <!-- Product Image (you can add an ImageView here) -->
    <androidx.cardview.widget.CardView
        android:background="#C3C1C1"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageViewProduct"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_85sdp"
                android:src="@drawable/blank_image"
                android:layout_gravity="center"/>
            <!-- Product Details -->
            <LinearLayout
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_100sdp"
                android:orientation="vertical"
                android:weightSum="10"
                android:padding="16dp">

                <!-- Product Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/textViewProductName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Product Name"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                        <!-- Product Price -->
                        <TextView
                            android:id="@+id/textViewProductPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Product Price"
                            android:textSize="14sp"
                            android:textColor="@android:color/holo_red_dark" />
                    </LinearLayout>
                    <ImageView
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:id="@+id/imgFav"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/tym_false" />


                    <!-- Add to Cart Button -->
                </LinearLayout>
                <ImageView
                    android:id="@+id/imgAddToCartAll"
                    android:src="@drawable/addtocart"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:background="@drawable/img_shape"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

