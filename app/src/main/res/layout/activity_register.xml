<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".uis.LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="@dimen/_80sdp"
                android:textSize="@dimen/_30sdp"
                android:text="Register"
                android:layout_gravity="center"
                android:textColor="#419F7D"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#F44336"
                android:textSize="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/tvFirstname"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:hint=" Firstname:"
                android:id="@+id/edtFirstname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/edit_text_shape"
                android:paddingLeft="@dimen/_10sdp"/>
            <TextView
                android:textColor="#F44336"
                android:textSize="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/tvLastname"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:hint=" Lastname:"
                android:id="@+id/edtLastname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/edit_text_shape"
                android:paddingLeft="@dimen/_10sdp"/>
            <TextView
                android:textColor="#F44336"
                android:textSize="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/tvUsername2"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:hint=" Username:"
                android:id="@+id/edtUsername2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/edit_text_shape"
                android:paddingLeft="@dimen/_10sdp"/>
            <TextView
                android:textColor="#F44336"
                android:textSize="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/tvPassword2"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:hint=" Password:"
                android:id="@+id/edtPassword2"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/edit_text_shape"
                android:paddingLeft="@dimen/_10sdp"/>
            <TextView
                android:textColor="#F44336"
                android:textSize="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/tvPasswordConfirm"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtPasswordConfirm"
                android:hint=" Confirm password:"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/edit_text_shape"
                android:paddingLeft="@dimen/_10sdp"/>
            <TextView
                android:textColor="#F44336"
                android:textSize="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/tvImage"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtImage"
                android:hint=" Link image:"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/edit_text_shape"
                android:paddingLeft="@dimen/_10sdp"/>
            <TextView
                android:textColor="#F44336"
                android:textSize="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/tvPhoneNumber"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtPhoneNumber"
                android:hint=" Phone number:"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/edit_text_shape"
                android:paddingLeft="@dimen/_10sdp"/>
            <TextView
                android:textColor="#F44336"
                android:textSize="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/tvAddress"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtAddress"
                android:hint=" Address:"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/edit_text_shape"
                android:paddingLeft="@dimen/_10sdp"/>

            <Button
                android:id="@+id/btnRegister"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp"
                android:text="REGISTER"
                android:background="@drawable/button_shape"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>